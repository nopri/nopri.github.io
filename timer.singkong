reset()
var l = component("label", string(@))
var x = component("label", "")
var b1 = component("button", "start")
var b2 = component("button", "stop")

add([l, x])
add_s([b1, b2])

var f = fn() {
    config(l, "text", string(@))
}

var timer_start = fn() {
    var i = timer(1000, f)
    config(x, "text", i)
}

var timer_stop = fn() {
    stop_timer(number(get(x, "text")))
    #
        or use stop() to stop all timers.
    ;
}

event(b1, timer_start)
event(b2, timer_stop)

show()